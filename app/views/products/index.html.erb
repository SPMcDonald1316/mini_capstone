<h1>Here are all the products</h1>
<br>
<% @products.each do |product|%>
  <p><a href="/products/<%= product.id %>"><%= product.name %></a></p>
  <p><%= product.price%></p>
  <p><%= product.description%></p>
  <% product.images.each do |image|%>
    <img src="<%= image.url %>" width="200" height="200">
  <%end%>
  <hr>
<%end%>
